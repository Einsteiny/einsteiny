<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:res="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/cardView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/line_left_margin"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/DateText"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="@dimen/large_margin"
        android:text="SEP 10" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvDate"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_toEndOf="@+id/tvDate"
        android:text="Relaxing Sunday"
        android:textSize="@dimen/medium_font_size" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:alpha="0.5"

        android:layout_margin="2dp"
        res:cardCornerRadius="3dp">

        <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/simple_margin"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/simple_margin"
                android:layout_toRightOf="@id/ivImage"
                android:textAppearance="?android:textAppearanceMedium"
                android:textStyle="bold"
                tools:text="TextView" />

            <TextView
                android:id="@+id/tvSnippet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivImage"
                android:layout_marginLeft="@dimen/simple_margin"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="TextView" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
